{
  "name": "serviceworker-webpack-plugin",
  "version": "0.2.3",
  "description": "Simplifies creation of a service worker to serve your webpack bundles",
  "main": "dist/lib/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "lib",
    "src"
  ],
  "scripts": {
    "clean": "rimraf ./dist",
    "lint": "tslint -c tslint.json './src/**/*.ts' --fix",
    "pretest": "npm run lint",
    "test": "NODE_ENV=test jest --silent --coverage",
    "prebuild": "npm run clean",
    "prettier": "prettier 'src/**/*.{js,ts,tsx}' --write --single-quote --trailing-comma es5 --print-width 100",
    "build": "tsc",
    "version": "yarn build && pkgfiles"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/oliviertassinari/serviceworker-webpack-plugin.git"
  },
  "keywords": [
    "serviceworker",
    "webpack",
    "plugin"
  ],
  "author": "Olivier Tassinari <olivier.tassinari@gmail.com> (https://github.com/oliviertassinari)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/oliviertassinari/serviceworker-webpack-plugin/issues"
  },
  "homepage": "https://github.com/oliviertassinari/serviceworker-webpack-plugin#readme",
  "dependencies": {
    "minimatch": "3.0.4"
  },
  "peerDependencies": {
    "webpack": "4"
  },
  "devDependencies": {
    "@types/jest": "22.2.0",
    "@types/minimatch": "3.0.3",
    "@types/node": "9.4.7",
    "jest": "22.4.2",
    "pkgfiles": "2.3.2",
    "prettier": "1.11.1",
    "rimraf": "2.6.2",
    "ts-jest": "22.4.1",
    "tslint": "5.9.1",
    "tslint-config-prettier": "1.10.0",
    "typescript": "2.7.2",
    "webpack": "4.1.1"
  },
  "jest": {
    "globals": {
      "window": true
    },
    "rootDir": "./src",
    "setupFiles": [
      "../jestsetup.js"
    ],
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx",
      "json"
    ],
    "transform": {
      ".(ts|tsx)": "<rootDir>../node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "coverageThreshold": {
      "global": {
        "branches": 30,
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    },
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "coverageDirectory": "../coverage",
    "testURL": "http://localhost:3000"
  }
}
